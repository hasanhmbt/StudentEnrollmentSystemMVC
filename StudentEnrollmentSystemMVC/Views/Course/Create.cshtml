@model StudentEnrollmentSystemMVC.Models.Course

@{
    ViewData["Title"] = "Create Course";
}

<div class="container mt-4">
    <div class="card shadow mb-4">
        <div class="card-header">
            <h2 class="m-0 font-weight-bold text-primary">Create Course</h2>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" aria-label="Course Title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Credits" class="control-label"></label>
                    <input asp-for="Credits" type="number" class="form-control" aria-label="Course Credits" />
                    <span asp-validation-for="Credits" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary" aria-label="Create Course">
                        <i class="fas fa-plus-circle"></i> Create
                    </button>
                    <a asp-action="Index" class="btn btn-secondary" aria-label="Back to Course List">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
