@model StudentEnrollmentSystemMVC.Models.Course

@{
    ViewData["Title"] = "Course Details";
}

<div class="container mt-4">
    <div class="card shadow mb-4">
        <div class="card-header">
            <h2 class="m-0 font-weight-bold text-primary">Course Details</h2>
        </div>
        <div class="card-body">
            <h4>@Model.Title</h4>
            <p><strong>Credits:</strong> @Model.Credits</p>

            <h4 class="mt-4">Enrolled Students</h4>

            @if (Model.Enrollments != null && Model.Enrollments.Any())
            {
                <table class="table table-bordered table-hover mt-3">
                    <thead class="thead-light">
                        <tr>
                            <th>#</th>
                            <th>Student Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int rowNum = 0;
                        }
                        @foreach (var enrollment in Model.Enrollments)
                        {
                            rowNum++;
                            <tr>
                                <td>@rowNum</td>
                                <td>@enrollment.Student.Name</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">No students are currently enrolled in this course.</p>
            }
        </div>
        <div class="card-footer">
            <a asp-action="Index" class="btn btn-primary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>
