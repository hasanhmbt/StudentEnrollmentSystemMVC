@model IEnumerable<Student>

 

 
<div class="container-fluid">
    
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            
                <a asp-action="Create" class="btn btn-primary">Create New</a>
            
            <h6 class="m-0 font-weight-bold text-primary">Students</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>EnrollmentDate</th>
                            <th>Enrollments</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in Model)
                        {
                            <tr>
                                <td>@student.Name</td>
                                <td>@student.Email</td>
                                <td>@student.EnrollmentDate</td>

                                <td>
                                    @{
                                        if (student.Enrollments != null && student.Enrollments.Any())
                                        {
                                            var courses = string.Join(", ", student.Enrollments
                                            .Where(e => !string.IsNullOrEmpty(e.Course.Title))
                                            .Select(e => e.Course.Title));
                                            if (string.IsNullOrEmpty(courses))
                                            {
                                                @:None
                                            }
                                            else
                                            {
                                                @courses
                                            }
                                        }
                                        else
                                        {
                                            @:None
                                        }
                                    }
                                </td>

                                <td>
                                    <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-primary">Edit</a>
                                    <a asp-action="Details" asp-route-id="@student.Id" class="btn btn-primary">Details</a>
                                    <a asp-action="Delete" asp-route-id="@student.Id" class="btn btn-primary">Delete</a>
                                </td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>



@section css {
    <!-- Custom styles for this page -->
    <link href="~/bootstrapadmin/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}

@section js {

    <!-- Page level plugins -->
    <script src="~/bootstrapadmin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/bootstrapadmin/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/bootstrapadmin/js/demo/datatables-demo.js"></script>
}