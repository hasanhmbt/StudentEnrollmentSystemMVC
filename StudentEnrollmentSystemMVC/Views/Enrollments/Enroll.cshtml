@model Enrollment

<h2>Enroll Student in Course</h2>

<form asp-action="Enroll">
    <div class="form-group">
        <label for="StudentId">Select Student</label>
        <select asp-for="StudentId" class="form-control" asp-items="ViewBag.Students"></select>
    </div>
    <div class="form-group">
        <label for="CourseId">Select Course</label>
        <select asp-for="CourseId" class="form-control" asp-items="ViewBag.Courses"></select>
    </div>
    <button type="submit" class="btn btn-primary">Enroll</button>
</form>

<a href="@Url.Action("Index", "Students")" class="btn btn-secondary">Back to Students List</a>
