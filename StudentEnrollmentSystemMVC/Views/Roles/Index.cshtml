@model IList<RolesViewModel>

<div class="container-fluid">

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Roles</h6>
            <a asp-controller="Roles" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus-circle"></i> Create New
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{int index=0;}
                        @foreach (var role in Model)
                        { 
                            index++;
                            <tr>
                                <td>@index</td>
                                <td>@role.Name</td>
                                
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-sm btn-primary" aria-label="Edit @role.Name">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@role.Id" class="btn btn-sm btn-danger" aria-label="Delete @role.Name">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

@section css {
    <!-- Custom styles for this page -->
    <link href="~/bootstrapadmin/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}

@section js {
    <!-- Page level plugins -->
    <script src="~/bootstrapadmin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/bootstrapadmin/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable({
                "paging": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "responsive": true
            });
        });
    </script>
}
