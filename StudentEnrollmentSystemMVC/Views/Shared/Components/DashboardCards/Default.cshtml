@model List<DashboardCardViewModel>

<div class="row">
    @foreach (var card in Model)
    {
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-@card.BorderColor shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-@card.BorderColor text-uppercase mb-1">
                                @card.Title
                            </div>
                            @if (!string.IsNullOrEmpty(card.AdditionalInfo))
                            {
                                <div class="row no-gutters align-items-center">
                                    <div class="col-auto">
                                        <div class="h5 mb-0 mr-3 font-weight-bold @card.ValueColor">@card.Value</div>
                                    </div>
                                    <div class="col">
                                        <div class="progress progress-sm mr-2">
                                            <div class="progress-bar bg-@card.BorderColor" role="progressbar"
                                                 style="width: @card.ProgressPercentage%" aria-valuenow="@card.ProgressPercentage" aria-valuemin="0"
                                                 aria-valuemax="100"></div>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="h5 mb-0 font-weight-bold @card.ValueColor">@card.Value</div>
                            }
                        </div>
                        <div class="col-auto">
                            <i class="@card.IconClass fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
